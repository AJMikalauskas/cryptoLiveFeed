    <div class="container" id="tableBelowMain">
        <h1 id="tableHeader">Cryptos By Market Price </h1>
        <!-- onkeyup="myFunction()" -->
        <div id="inputContainer">
            <input type="text" id="myInput" onkeyup="searchForCryptos()" placeholder="Search for cryptos..">
        </div>
        <table id="adjustingTable" class="table ">
            <thead>
                <tr>
                    <th scope="col">Coin</th>
                    <th scope="col">Price</th>
                    <th scope="col">24h Change</th>
                    <th scope="col">Market Cap</th>
                </tr>
            </thead>
            <tbody>
                <% for(var cryptoSelect=0; cryptoSelect < storeBody.length; cryptoSelect++) { %>
                    <tr class="nonHeadElements">
                      <td scope="row"><img class="imgCss" src= <%= "../img/" + storeBody[cryptoSelect]["id"] + "Picture.png"%> alt=<%= storeBody[cryptoSelect]["id"]%>>
                        <span class="symbolBold"><%= storeBody[cryptoSelect]["symbol"].toUpperCase() %></span>
                        <span class="padNameLeft"><%= storeBody[cryptoSelect]["name"] %></span> </td>
                      <td><%= (storeBody[cryptoSelect].current_price).toLocaleString("en-US", {style:"currency", currency:"USD"}) %></td>
                        <% if(storeBody[cryptoSelect].price_change_percentage_24h.toFixed(2) > 0) {%> 
                      <td id="colorGreen"><%= storeBody[cryptoSelect].price_change_percentage_24h.toFixed(2) + "%" %></td>
                      <%} else { %>
                        <td id="colorRed"><%= storeBody[cryptoSelect].price_change_percentage_24h.toFixed(2) + "%" %></td>
                        <% } %> 
                      <td><%= (storeBody[cryptoSelect].market_cap).toLocaleString() %></td>
                    </tr>
                 <% } %>
